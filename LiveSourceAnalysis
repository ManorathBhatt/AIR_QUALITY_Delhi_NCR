
import React from 'react';
import { motion } from 'framer-motion';
import { PieChart, Pie, Cell, ResponsiveContainer, BarChart, Bar, XAxis, YAxis, Tooltip } from 'recharts';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { useLiveData } from './LiveDataProvider';
import { Factory, Car, Flame, Building2, Home, AlertTriangle, Atom } from 'lucide-react';

const sourceIcons = {
    vehicular: Car,
    industrial: Factory,
    stubble_burning: Flame,
    construction: Building2,
    residential: Home,
    other: Atom
};

const sourceColors = {
    vehicular: '#ef4444',
    industrial: '#f97316',
    stubble_burning: '#eab308',
    construction: '#84cc16',
    residential: '#3b82f6',
    other: '#a855f7'
};

// Abbreviated names for charts to prevent text overlap on mobile
const sourceAbbreviation = {
    vehicular: 'Vehicular',
    industrial: 'Industry',
    stubble_burning: 'Stubble',
    construction: 'Construct',
    residential: 'Housing',
    other: 'Other'
};

export default function LiveSourceAnalysis() {
    const { sourceContribution, liveAQI } = useLiveData();

    const chartData = Object.entries(sourceContribution).map(([source, value]) => ({
        name: source.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()),
        shortName: sourceAbbreviation[source] || source,
        value,
        color: sourceColors[source],
        icon: sourceIcons[source]
    })).sort((a, b) => b.value - a.value);

    return (
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {/* Live Source Breakdown Chart */}
            <motion.div
                initial={{ x: -20, opacity: 0 }}
                animate={{ x: 0, opacity: 1 }}
                transition={{ delay: 0.2 }}
            >
                <Card>
                    <CardHeader>
                        <CardTitle className="flex items-center gap-2">
                            <div className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                            Real-Time Source Analysis
                        </CardTitle>
                    </CardHeader>
                    <CardContent>
                        <ResponsiveContainer width="100%" height={300}>
                            <PieChart>
                                <Pie
                                    data={chartData}
                                    cx="50%"
                                    cy="50%"
                                    outerRadius={100}
                                    innerRadius={50}
                                    dataKey="value"
                                >
                                    {chartData.map((entry, index) => (
                                        <Cell key={`cell-${index}`} fill={entry.color} />
                                    ))}
                                </Pie>
                                <Tooltip formatter={(value, name, props) => [`${value}%`, props.payload.name]} />
                            </PieChart>
                        </ResponsiveContainer>
                    </CardContent>
                </Card>
            </motion.div>

            {/* Source Breakdown Details */}
            <motion.div
                initial={{ x: 20, opacity: 0 }}
                animate={{ x: 0, opacity: 1 }}
                transition={{ delay: 0.3 }}
            >
                <Card>
                    <CardHeader>
                        <CardTitle>Live Source Breakdown</CardTitle>
                    </CardHeader>
                    <CardContent className="space-y-3">
                        {chartData.map((source, index) => {
                            const IconComponent = source.icon;
                            return (
                                <div key={source.name} className="flex items-center justify-between p-3 border rounded-lg bg-card hover:bg-muted/50 transition-colors">
                                    <div className="flex items-center gap-3">
                                        <div 
                                            className="p-2 rounded-lg"
                                            style={{ backgroundColor: `${source.color}20` }}
                                        >
                                            <IconComponent 
                                                className="w-5 h-5" 
                                                style={{ color: source.color }}
                                            />
                                        </div>
                                        <div>
                                            <div className="font-medium capitalize">
                                                {source.name}
                                            </div>
                                            <div className="text-sm text-muted-foreground">
                                                #{index + 1} contributor
                                            </div>
                                        </div>
                                    </div>
                                    <div className="text-right">
                                        <div className="text-xl font-bold" style={{ color: source.color }}>
                                            {source.value}%
                                        </div>
                                        {source.value > 30 && (
                                            <Badge variant="outline" className="mt-1 border-red-500/50 text-red-400">
                                                High
                                            </Badge>
                                        )}
                                    </div>
                                </div>
                            );
                        })}
                        
                        <div className="mt-4 p-3 bg-blue-500/10 border border-blue-500/20 rounded-lg">
                            <div className="text-sm text-blue-400 font-medium">Live Data Quality</div>
                            <div className="text-xs text-muted-foreground mt-1">
                                Based on {liveAQI.length} active monitoring stations
                            </div>
                        </div>
                    </CardContent>
                </Card>
            </motion.div>

            {/* Historical Trend */}
            <motion.div
                initial={{ y: 20, opacity: 0 }}
                animate={{ y: 0, opacity: 1 }}
                transition={{ delay: 0.4 }}
                className="lg:col-span-2"
            >
                <Card>
                    <CardHeader>
                        <CardTitle>Source Contribution Trend</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <ResponsiveContainer width="100%" height={250}>
                            <BarChart data={chartData}>
                                <XAxis 
                                    dataKey="shortName" 
                                    angle={-45} 
                                    textAnchor="end" 
                                    height={50} 
                                    stroke="hsl(var(--muted-foreground))"
                                    interval={0}
                                />
                                <YAxis stroke="hsl(var(--muted-foreground))" />
                                <Tooltip 
                                    formatter={(value, name, props) => [`${value}%`, props.payload.name]}
                                    labelStyle={{ color: 'hsl(var(--foreground))' }}
                                    contentStyle={{ 
                                        backgroundColor: 'hsl(var(--card))', 
                                        border: '1px solid hsl(var(--border))',
                                        borderRadius: '8px'
                                    }}
                                />
                                <Bar dataKey="value" fill="url(#gradient)" radius={[4, 4, 0, 0]}>
                                    {chartData.map((entry, index) => (
                                        <Cell key={`cell-${index}`} fill={entry.color} />
                                    ))}
                                </Bar>
                            </BarChart>
                        </ResponsiveContainer>
                    </CardContent>
                </Card>
            </motion.div>
        </div>
    );
}
