import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import { Progress } from '@/components/ui/progress';
import { useLiveData } from './LiveDataProvider';
import { Clock, CheckCircle, AlertCircle, XCircle, TrendingDown, Users, MapPin } from 'lucide-react';

const policyTypeColors = {
    odd_even: '#ef4444',
    firecracker_ban: '#f97316',
    construction_halt: '#eab308',
    industrial_restriction: '#22c55e',
    stubble_burning_ban: '#a855f7',
    public_transport_free: '#3b82f6',
    vehicle_restriction: '#ec4899',
    emergency_measures: '#dc2626'
};

const statusIcons = {
    active: CheckCircle,
    upcoming: Clock,
    expired: XCircle,
    suspended: AlertCircle
};

export default function LivePolicyTracker() {
    const { activePolicies, refreshData } = useLiveData();
    const [selectedPolicy, setSelectedPolicy] = useState(null);

    const calculateRemainingTime = (endDateTime) => {
        const now = new Date();
        const end = new Date(endDateTime);
        const diff = end - now;
        
        if (diff <= 0) return "Expired";
        
        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        
        if (days > 0) return `${days}d ${hours}h remaining`;
        return `${hours}h remaining`;
    };

    const getEffectivenessColor = (effectiveness) => {
        if (effectiveness >= 20) return "text-green-500";
        if (effectiveness >= 10) return "text-yellow-500";
        return "text-red-500";
    };

    return (
        <div className="space-y-6">
            {/* Live Policy Status Overview */}
            <motion.div
                initial={{ opacity: 0, y: -20 }}
                animate={{ opacity: 1, y: 0 }}
                className="grid grid-cols-1 md:grid-cols-4 gap-4"
            >
                <Card className="bg-gradient-to-br from-green-500/10 to-emerald-500/10 border-green-500/20">
                    <CardHeader className="pb-3">
                        <CardTitle className="text-sm text-green-400">Active Policies</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <div className="text-2xl font-bold text-green-400">
                            {activePolicies.filter(p => p.status === 'active').length}
                        </div>
                        <div className="text-xs text-muted-foreground">Currently enforced</div>
                    </CardContent>
                </Card>

                <Card>
                    <CardHeader className="pb-3">
                        <CardTitle className="text-sm text-blue-400">Avg Effectiveness</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <div className="text-2xl font-bold text-blue-400">
                            {activePolicies.length > 0 ? 
                                Math.round(activePolicies.reduce((sum, p) => sum + (p.actual_impact_percent || 0), 0) / activePolicies.length) 
                                : 0}%
                        </div>
                        <div className="text-xs text-muted-foreground">AQI improvement</div>
                    </CardContent>
                </Card>

                <Card>
                    <CardHeader className="pb-3">
                        <CardTitle className="text-sm text-purple-400">Compliance Rate</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <div className="text-2xl font-bold text-purple-400">
                            {activePolicies.length > 0 ? 
                                Math.round(activePolicies.reduce((sum, p) => sum + (p.compliance_rate_percent || 0), 0) / activePolicies.length) 
                                : 0}%
                        </div>
                        <div className="text-xs text-muted-foreground">Citizen compliance</div>
                    </CardContent>
                </Card>

                <Card>
                    <CardHeader className="pb-3">
                        <CardTitle className="text-sm text-orange-400">Citizen Reports</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <div className="text-2xl font-bold text-orange-400">
                            {activePolicies.reduce((sum, p) => sum + (p.citizen_reports_count || 0), 0)}
                        </div>
                        <div className="text-xs text-muted-foreground">Related reports</div>
                    </CardContent>
                </Card>
            </motion.div>

            {/* Active Policies List */}
            <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 0.2 }}
            >
                <Card>
                    <CardHeader className="flex flex-row items-center justify-between">
                        <CardTitle className="flex items-center gap-2">
                            <div className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                            Live Policy Status
                        </CardTitle>
                        <Button variant="outline" size="sm" onClick={refreshData}>
                            Refresh Data
                        </Button>
                    </CardHeader>
                    <CardContent>
                        <div className="space-y-4">
                            <AnimatePresence>
                                {activePolicies.map((policy, index) => {
                                    const StatusIcon = statusIcons[policy.status];
                                    const remainingTime = calculateRemainingTime(policy.end_datetime);
                                    
                                    return (
                                        <motion.div
                                            key={policy.policy_id}
                                            initial={{ opacity: 0, x: -20 }}
                                            animate={{ opacity: 1, x: 0 }}
                                            exit={{ opacity: 0, x: 20 }}
                                            transition={{ delay: index * 0.1 }}
                                            className="p-4 border rounded-lg hover:border-border/80 transition-colors cursor-pointer"
                                            onClick={() => setSelectedPolicy(selectedPolicy?.policy_id === policy.policy_id ? null : policy)}
                                        >
                                            <div className="flex items-start justify-between">
                                                <div className="flex items-start gap-3">
                                                    <StatusIcon 
                                                        className={`w-5 h-5 mt-0.5 ${
                                                            policy.status === 'active' ? 'text-green-500' : 
                                                            policy.status === 'upcoming' ? 'text-blue-500' : 
                                                            policy.status === 'expired' ? 'text-red-500' : 'text-yellow-500'
                                                        }`} 
                                                    />
                                                    <div>
                                                        <h4 className="font-semibold text-foreground">{policy.policy_name}</h4>
                                                        <div className="flex flex-wrap items-center gap-2 mt-1">
                                                            <Badge 
                                                                variant="outline"
                                                                style={{ 
                                                                    borderColor: policyTypeColors[policy.policy_type],
                                                                    color: policyTypeColors[policy.policy_type]
                                                                }}
                                                            >
                                                                {policy.policy_type.replace(/_/g, ' ').toUpperCase()}
                                                            </Badge>
                                                            <Badge className={
                                                                policy.status === 'active' ? 'bg-green-500/10 text-green-400 border-green-500/20' :
                                                                policy.status === 'upcoming' ? 'bg-blue-500/10 text-blue-400 border-blue-500/20' :
                                                                'bg-red-500/10 text-red-400 border-red-500/20'
                                                            }>
                                                                {policy.status.toUpperCase()}
                                                            </Badge>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div className="text-right">
                                                    <div className={`text-lg font-bold ${getEffectivenessColor(policy.actual_impact_percent || 0)}`}>
                                                        {policy.actual_impact_percent || 0}%
                                                    </div>
                                                    <div className="text-xs text-muted-foreground">Effectiveness</div>
                                                </div>
                                            </div>

                                            {policy.status === 'active' && (
                                                <div className="mt-3 flex items-center justify-between text-sm">
                                                    <span className="text-muted-foreground">{remainingTime}</span>
                                                    <div className="flex items-center gap-4">
                                                        <div className="flex items-center gap-1">
                                                            <TrendingDown className="w-4 h-4 text-green-500" />
                                                            <span>AQI: {policy.baseline_aqi_before} â†’ {policy.current_aqi_reading}</span>
                                                        </div>
                                                        <div className="flex items-center gap-1">
                                                            <Users className="w-4 h-4 text-blue-500" />
                                                            <span>{policy.compliance_rate_percent || 0}% compliance</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            )}

                                            {/* Expanded Details */}
                                            <AnimatePresence>
                                                {selectedPolicy?.policy_id === policy.policy_id && (
                                                    <motion.div
                                                        initial={{ height: 0, opacity: 0 }}
                                                        animate={{ height: 'auto', opacity: 1 }}
                                                        exit={{ height: 0, opacity: 0 }}
                                                        className="mt-4 pt-4 border-t border-border space-y-3"
                                                    >
                                                        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                                            <div>
                                                                <h5 className="font-medium mb-2 flex items-center gap-2">
                                                                    <MapPin className="w-4 h-4" />
                                                                    Affected Areas
                                                                </h5>
                                                                <div className="flex flex-wrap gap-1">
                                                                    {policy.affected_areas?.map(area => (
                                                                        <Badge key={area} variant="secondary">{area}</Badge>
                                                                    ))}
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h5 className="font-medium mb-2">Implementation Progress</h5>
                                                                <Progress 
                                                                    value={policy.compliance_rate_percent || 0} 
                                                                    className="mb-2" 
                                                                />
                                                                <div className="text-sm text-muted-foreground">
                                                                    {policy.citizen_reports_count || 0} citizen reports received
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </motion.div>
                                                )}
                                            </AnimatePresence>
                                        </motion.div>
                                    );
                                })}
                            </AnimatePresence>

                            {activePolicies.length === 0 && (
                                <div className="text-center py-8 text-muted-foreground">
                                    No active policies at this time
                                </div>
                            )}
                        </div>
                    </CardContent>
                </Card>
            </motion.div>
        </div>
    );
}